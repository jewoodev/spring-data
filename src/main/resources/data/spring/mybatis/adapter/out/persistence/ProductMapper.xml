<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="data.spring.mybatis.adapter.out.persistence.product.ProductMapper">
    <insert id="save" useGeneratedKeys="true" keyProperty="productId">
        insert into product (product_name, price, quantity, created_at, updated_at)
        values (#{productName}, #{price}, #{quantity}, #{createdAt}, #{updatedAt})
    </insert>

    <update id="update">
        update product
        <set>
            <if test="productName != null">product_name = #{productName},</if>
            <if test="price != null">price = #{price},</if>
            <if test="quantity != null">quantity = #{quantity},</if>
            <if test="updatedAt != null">updated_at = #{updatedAt},</if>
        </set>
        where product_id = #{productId}
    </update>

    <delete id="truncate">
        truncate table product restart identity
    </delete>

    <select id="findById" resultType="Product">
        select *
        from product
        where product_id = #{productId}
    </select>

    <select id="findByCond" resultType="Product">
        select *
        from product
        <where>
            <if test="searchCond.productName != null and searchCond.productName != ''">
                product_name like concat(#{searchCond.productName}, '%')
            </if>
            <if test="searchCond.maxPrice != null">
                and price &lt;= #{searchCond.maxPrice}
            </if>
            <if test="createdAt != null and productId != null">
                (createdAt, productId) &lt; (#{createdAt}, #{productId})
            </if>
        </where>
        limit #{size}
    </select>

    <select id="findAll" resultType="Product">
        select * from product
    </select>
</mapper>
